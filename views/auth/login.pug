extends ../layout/common.pug
block content
    h2 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method="POST")
        .form-group
            label(for="email") Email
            input#email( name="email",type="text", class="form-control ",value=values ? values.email : "")

        .form-group
            label(for="password") Password
            input#password( name="password",type="password", class="form-control ",value=values ? values.password : "")

        button( class="btn btn-outline-success my-2 my-sm-0") Login